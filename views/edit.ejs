<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center mt-5">Edit Show</h1>
        <div class="col-6 offset-3">
            <form action="/shows/<%=IdShow._id %>?_method=PUT" method="post" novalidate class="validated-form">
                <div>
                    <div class="mb-3">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="show[name]" value="<%=IdShow.name  %>"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="language">Language</label>
                        <input class="form-control" type="text" id="language" name="show[language]"
                            value="<%=IdShow.language  %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Image Url</label>
                        <input class="form-control" type="text" id="image" name="show[image]"
                            value="<%=IdShow.image  %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mg-3">
                        <label class="form-label" for="url">Show Url</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="url" name="show[url]" value="<%=IdShow.url  %>"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="dis">description</label>
                        <textarea class="form-control" type="text" id="dis" name="show[dis]"
                            required><%=IdShow.dis%></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="type">Type</label>
                        <input class="form-control" type="text" id="type" name="show[type]" value="<%=IdShow.type  %>"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary">Update Show</button>
            </form>
            <div class="mb-3 mt-3">
                <a href="/shows/<%=IdShow._id %>">Cancel</a>
            </div>
        </div>
    </div>