<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-4 offset-4">
        <div class="card mb-3">
            <img src="<%= IdShow.image %>" id="my" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= IdShow.name %> <P><%= IdShow.language %>/<%= IdShow.type %></P></h5>
              <p class="card-text"><%=  %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-secondary"><%= IdShow.dis %></li>
              <li class="list-group-item"> <a href="<%= IdShow.url %>">Click Here</a></li>
            </ul>
            <div class="card-body">
              <a href="/shows/<%=IdShow._id %>/edit" class="card-link btn btn-info">Edit Show</a>
              <form class="d-inline" action="/shows/<%=IdShow._id %>?_method=DELETE" method="post"><button class="btn btn-danger">Delete</button></form>
            </div>
          </div>
    </div>
</div>
<style>
    img{
        height: 400px;
    }
    body{
      background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center bottom;
    }
</style>